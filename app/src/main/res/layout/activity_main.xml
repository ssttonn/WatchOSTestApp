<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.wear.widget.BoxInsetLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/box_inset_layout_padding"
        tools:context=".MainActivity"
        tools:deviceIds="wear">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/inner_frame_layout_padding"
            app:layout_boxedEdges="all">

            <TextView
                android:id="@+id/messageText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/received_message" />

            <Button
                android:id="@+id/sendMessageBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/send_example_message" />

            <TextView
                android:id="@+id/dataText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/received_message" />
            <Button
                android:id="@+id/sendMapDataBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/send_example_map_data" />

            <ImageView
                android:id="@+id/sampleImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                />

        </LinearLayout>
</ScrollView>
    </androidx.wear.widget.BoxInsetLayout>
</layout>